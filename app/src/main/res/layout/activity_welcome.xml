<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/darkBackground"
    tools:context=".WelcomeActivity">

    <ImageView
        android:id="@+id/imageviewWelcomeImage"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:layout_marginBottom="44dp"
        android:layout_gravity="center"
        android:src="@drawable/ali"
        android:scaleType="centerCrop"
        android:background="@color/white"/>

    <TextView
        android:id="@+id/textviewWelcomTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:layout_gravity="center"
        android:text="Welcome to Trip Planning App"
        android:textSize="22dp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textviewWelcomDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:layout_gravity="center"
        android:padding="22dp"
        android:text="This is the first app created by Ali Hamza. you can plan your trip, add notes and more. press the Continue button"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/buttonWelcomeContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:text="Continue"
        android:textColor="@color/darkBackground"
        android:textStyle="bold"
        android:backgroundTint="@color/white"/>

</LinearLayout>