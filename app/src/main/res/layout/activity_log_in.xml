<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top|center"
    android:padding="24dp"
    android:background="@color/darkBackground"
    tools:context=".LogInActivity">

    <ImageView
        android:id="@+id/imageviewLogInImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="44dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/login"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/textviewLogInTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="44dp"
        android:text="Login page"
        android:textSize="44dp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edittextLogInUserName"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="24dp"
        android:padding="12dp"
        android:hint="Username"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:drawableEnd="@drawable/username"
        android:drawablePadding="12dp"/>

    <EditText
        android:id="@+id/edittextLogInPassword"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginBottom="54dp"
        android:padding="12dp"
        android:hint="Password"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:drawableEnd="@drawable/password"
        android:drawablePadding="12dp"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/buttonLogInContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginLeft="24dp"
        android:text="login"
        android:textColor="@color/darkBackground"
        android:textStyle="bold"
        android:backgroundTint="@color/white"/>

    <TextView
        android:id="@+id/textviewLogInContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue without login"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:clickable="true"
        android:focusable="true"/>

</LinearLayout>